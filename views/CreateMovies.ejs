<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Movies</title>
</head>
<body>
    <%- include('./partials/header-dashboard.ejs') %>

    <div id="form">
        <div class="container">
          <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-md-8 col-md-offset-2">
            <div id="userform">
              <ul class="nav nav-tabs nav-justified" role="tablist">
                <li class="active"><a role="tab" data-toggle="tab">Create Movies</a></li>
                <!-- <li ><a href="#signup"  role="tab" data-toggle="tab">Sign up</a></li> -->
              </ul>
              <div class="tab-content">
      
                <div class="tab-pane fade active in" id="login">
                  <h2 class="text-uppercase text-center"> </h2>
                  <form id="login" method="post" action="/movies/create">
                    <div class="form-group">

                      <label> Movie Title<span class="req">*</span> </label>
                      <input name="title" type="text" class="form-control" id="email" required data-validation-required-message="Enter movie title." autocomplete="off">
                      <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group">
                      <label> Decreiption<span class="req">*</span> </label>
                      <input name="description" type="text" class="form-control" id="password" required data-validation-required-message="Enter movie description" autocomplete="off">
                      <p class="help-block text-danger"></p>
                    </div>
                    <div class="form-group">
                        <label> Image<span class="req">*</span> </label>
                        <input name="image" type="text" class="form-control" id="password" required data-validation-required-message="Enter image url" autocomplete="off">
                        <p class="help-block text-danger"></p>
                      </div>
                      <div class="form-group">
                        <label> Price<span class="req">*</span> </label>
                        <input name="price" type="text" class="form-control" id="password" required data-validation-required-message="enter movie price" autocomplete="off">
                        <p class="help-block text-danger"></p>
                      </div>
                      <% if (locals.error){ %>
                        <div class="name error" style="
                          color: #ff0099;
                          margin: 10px 2px;
                          font-size: 0.8em;
                          font-weight: bold;
                          ">
                          <%= error %>
                        </div>
                    <% } %>
                    <div class="mrgn-30-top">
                      <button type="submit" class="btn btn-larger btn-block" />
                      Create
                      </button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.container --> 
      </div>
      
      
      <!--######################################### FOOTER ################################################### -->
      <%-include('./partials/footer.ejs') %>
      
      <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>
      <!-- Latest compiled and minified JavaScript -->
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
      </body>
      <!-- partial -->
        <script  src="/javascript/script.js"></script>
      
</body>
</html>